<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.codehaven.bambam" >

    <!-- Parse -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".Common"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.bb" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".ui.activities.Home"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".ui.activities.DispatchActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.SignIn"
            android:theme="@style/Theme.bb.login" >
        </activity>
        <activity
            android:name=".ui.activities.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />
        </activity>
        <activity
            android:name=".ui.activities.SendTuneActivity"
            android:label="@string/title_activity_send_tune"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/mpeg" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ChooseMp3Activity"
            android:label="@string/title_activity_choose_mp3" >
        </activity>
        <activity
            android:name=".ui.activities.CreateTuneActivity"
            android:label="@string/title_activity_choose_artwork"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />
        </activity>
        <activity
            android:name=".ui.activities.CheckForTunesActivity"
            android:label="@string/title_activity_check_for_tunes"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />
        </activity>
        <activity
            android:name=".ui.activities.CommentsActivity"
            android:label="@string/title_activity_comments"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />
        </activity>

        <service
            android:name=".services.UploadArtService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".services.UploadTuneService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".services.MusicService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".services.CommentsService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <service
            android:name=".services.GetCommentsService"
            android:exported="false" >
        </service>

        <receiver
            android:name=".receivers.NoisyAudioStreamReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".ui.activities.NowPlayingActivity"
            android:label="@string/title_activity_now_playing"
            android:parentActivityName=".ui.activities.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.codehaven.bambam.ui.activities.Home" />
        </activity>

        <service
            android:name=".services.PlaybackService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
